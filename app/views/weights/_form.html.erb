<div class="form-horizontal">
  <%= form_with model: weight, local: true do |f| %>
    <div class="form-group">
      <%= f.label :date, "Date *required", class:"form-label" %>
      <%= f.date_field :date, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :weight, "Weight *Required", class:"form-label" %>
      <%= f.text_field :weight, placeholder: "xx.x", class:"form-control" %> kg
    </div>
    <div class="form-group">
      <%= f.label :body_fat, "Body Fat", class:"form-label" %>
      <%= f.text_field :body_fat, placeholder: "xx.x", class:"form-control" %> %
    </div>
    <div class="button">
      <%= f.submit "Save", class:"btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
