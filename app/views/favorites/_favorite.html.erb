<% if meal.favorited_by?(current_user) %>
  <%= link_to meal.favorites.count, meal_favorites_path(meal.id), method: :delete, remote: true, class:"fas fa-heart heart_red" %>
<% else %>
  <%= link_to meal.favorites.count, meal_favorites_path(meal.id), method: :post, remote: true, class:"fas fa-heart heart_red"  %>
<% end %>