<!--検索フォーム-->
<%= render 'search/search' %>

<h1>食事内容詳細</h1>

<%= attachment_image_tag @meal, :menu_image, :fill, 150, 150, fallback:"no_image.jpg" %>
<p>
  メニュー
  <% @meal.meal_menus.each do |mm| %>
    <%= mm.name %>
  <% end %>
</p>
<p>カテゴリー  <%= @meal.category %></p>
<p>メニュー詳細  <%= @meal.menu_detail %></p>

<!--いいね機能の非同期通信-->
<div id="favorite-<%= @meal.id %>">
  <%= render 'favorites/favorite', meal: @meal %>
</div>
<!--いいね機能の非同期通信-->

<p><%= link_to "編集する", edit_meal_path(@meal.id) %></p>

<% if @meal.user_id == current_user.id %>
  <p><%= link_to "削除", meal_path(@meal.id), method: :delete %></p>
<% end %>

<!--コメント一覧-->
<div id="comments">
  <%= render 'post_comments/comment', meal: @meal %>
</div>
<!--コメント一覧-->

<!--コメント投稿フォーム-->
<div class="comment-form">
  <%= form_with model:[@meal, @post_comment] do |f| %>
    <%= f.label :comment, "コメントを書く" %>
    <%= f.text_area :comment, rows:'5', placeholder:"コメントをここに" %>
    <%= f.submit "コメントを送信する" %>
  <% end %>
</div>
<!--コメント投稿フォーム-->