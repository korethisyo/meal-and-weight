<h1>食事内容入力</h1>

<%= form_with model:@meal, local: true do |f| %>
  <div class="form-group">
    <%= f.label :date, "日付" %>
    <%= f.date_field :date %>
  </div>
  <div class="form-group">
    <%= f.fields_for :meal_menus do |mm| %>
      <%= mm.label :name, "メニュー名" %>
      <%= mm.text_field :name %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :menu_image_id, "食事画像" %>
    <%= f.attachment_field :menu_image %>
  </div>
  <div class="form-group">
    <%= f.label :category, "カテゴリー" %>
    <%= f.select :category, options_for_select(Meal.categories.keys) %>
  </div>
  <div class="form-group">
    <%= f.label :menu_detail, "メニュー詳細" %>
    <%= f.text_area :menu_detail %>
  </div>
  <%= f.submit "記録する" %>
<% end %>

