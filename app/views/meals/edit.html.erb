<h1>食事内容編集</h1>

<%= form_with model:@meal, local: true do |f| %>
  <div class="form-group">
    <%= f.label :date, "日付" %>
    <%= f.date_field :date %>
  </div>
  <div class="form-group">
    <%= f.fields_for :meal_menus do |mm| %>
      <%= render 'meal_menu_fields', f: mm %>
      <%= link_to_add_association '＋', f, :meal_menus %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :menu_image_id, "食事画像" %>
    <%= f.attachment_field :menu_image %>
  </div>
  <div class="form-group">
    <%= f.label :category, "カテゴリー" %>
    <%= f.select :category, options_for_select(Meal.categories.keys, @meal.category) %>
  </div>
  <div class="form-group">
    <%= f.label :menu_detail, "メニュー詳細" %>
    <%= f.text_area :menu_detail %>
  </div>
  <%= f.submit "更新する" %>
<% end %>
