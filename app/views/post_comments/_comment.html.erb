<table class="table table-borderless">
  <% meal.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to user_path(post_comment.user.id) do %>
          <%= attachment_image_tag post_comment.user, :user_image, :fill, 60, 60, size: "60x60", fallback:"no_image.jpg" %>
        <% end %>
      </td>
      <td><%= post_comment.nick_name %></td>
      <td><%= post_comment.comment %></td>
      <% if post_comment.written_by?(current_user) %>
        <td>
          <%= link_to "Delete comment", meal_post_comment_path(post_comment.meal.id, post_comment.id), method: :delete, remote: true, class:"btn btn-outline-danger" %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>