<!DOCTYPE html>
<html>
  <head>
    <title>MyIdealBody</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--railsのデータをJSに持ってくる-->
    <%= include_gon %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <ul>
          <li><%= link_to "体重管理", weights_path %></li>
          <li><%= link_to "食事管理", new_meal_path %></li>
          <li>カレンダー</li>
          <li><%= link_to "ユーザー", users_path %></li>
          <li><%= link_to "マイページ", user_path(current_user.id), method: :get %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <%= "マイページ" %>
        <%= "ユーザー" %>
        <%= link_to "新規会員登録", new_user_registration_path %>
        <%= link_to "ログイン", new_user_session_path %>
      <% end %>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer></footer>
  </body>
</html>
