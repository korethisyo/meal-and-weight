<div class="container">

  <h2 class="mb-4">Forgot your password?</h2>

  <div class="row justify-content-center">
    <div class="form-horizontal">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.email_field :email, autofocus: true, placeholder: "Email Address", autocomplete: "email", class:"form-control" %>
        </div>

        <div class="actions mb-4">
          <%= f.submit "Send me reset password instructions", class:"btn btn-outline-secondary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>