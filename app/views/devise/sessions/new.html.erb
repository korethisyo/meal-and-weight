<div class="container">

  <h2 class="mb-4">Log In</h2>

  <div class="row justify-content-center">
    <div class="form-horizontal">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-4">
          <%= f.email_field :email, autofocus: true, placeholder: "Email Address", autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field mb-4">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-4">
          <%= f.submit "Log In", class:"btn btn-outline-secondary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>