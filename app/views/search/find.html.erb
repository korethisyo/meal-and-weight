<div class="container">
  <!--ユーザー情報検索フォーム-->
  <%= render 'find' %>

  <!--ユーザー情報検索結果-->
  <h2 class="mt-3 mb-4">Search Users for　"<%= "#{@word}" %>"</h2>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @users.each do |user| %>
      <div class="col pb-2">
        <div class="user shadow">
          <div class="d-flex justify-content-start align-items-center">
            <%= link_to user_path(user.id), class:"text-dark" do %>
              <%= attachment_image_tag user, :user_image, size:'50x50', fallback:"no_image.jpg" %>
              <%= user.nick_name %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!--ページネーション-->
  <div class="row page">
    <%= paginate @users %>
  </div>
</div>
