<!--食事情報検索フォーム-->
<%= render 'search' %>

<h2>検索結果　"<%= "#{@content}" %>"</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>日付</th>
      <th>メニュー</th>
      <th>投稿ユーザー</th>
    </tr>
  </thead>
  <tbody>
  <% @meals.each do |meal| %>
    <tr>
      <td>
        <%= link_to meal_path(meal.id) do %>
          <%= attachment_image_tag meal, :menu_image, :fill, 50, 50, fallback:"no_image.jpg" %>
        <% end %>
      </td>
      <td>
        <%= meal.date %>
      </td>
      <td>
        <% meal.meal_menus.each do |mm| %>
          <%= mm.name %>
        <% end %>
      </td>
      <td><%= meal.user.nick_name %></td>
    </tr>
  <% end %>
  </tbody>
</table>