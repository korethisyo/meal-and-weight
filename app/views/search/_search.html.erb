<!--食事内容検索フォーム-->
<% if user_signed_in? %>
  <div class="row justify-content-center">
    <%= form_with url: search_path, method: :get, local:true do |f| %>
      <%= f.text_field :content, placeholder: "Menu Name" %>
      <%= f.submit 'Search', class:"btn btn-outline-primary" %>
    <% end %>
  </div>
<% end %>
