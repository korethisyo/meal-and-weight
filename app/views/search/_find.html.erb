<!--ユーザー情報検索フォーム-->
<% if user_signed_in? %>
<div class="container mt-2 mb-2">
  <div class="row justify-content-center">
    <%= form_with url: find_path, method: :get, local:true do |f| %>
      <%= f.text_field :word, placeholder: "ユーザー名" %>
      <%= f.submit '検索', class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>
