<!--ユーザー情報検索フォーム-->
<% if user_signed_in? %>
<div class="container mt-2 mb-2">
  <div class="row justify-content-end">
    <%= form_with url: find_path, method: :get, local:true do |f| %>
      <%= f.text_field :word, placeholder: "User Name" %>
      <%= f.submit 'Search', class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
<% end %>
